{
  "title": "AI Memory Layer",
  "schemaVersion": 37,
  "panels": [
    {
      "type": "stat",
      "title": "Requests per Second",
      "targets": [
        {
          "expr": "sum(rate(aiml_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "type": "graph",
      "title": "p95 Latency",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(aiml_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "yaxes": [
        {
          "format": "s",
          "label": "Seconds"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "sum(rate(aiml_requests_total{status=~\"5..\"}[5m])) / sum(rate(aiml_requests_total[5m]))",
          "legendFormat": "5xx ratio"
        }
      ],
      "yaxes": [
        {
          "format": "percent"
        },
        {
          "format": "short"
        }
      ]
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "30s"
}
